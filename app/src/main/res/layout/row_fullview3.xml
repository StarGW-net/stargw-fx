<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingRight="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/fullrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:src="@drawable/ic_flag_gbp"
                android:text="0" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rowMiddle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/myLeft"
            android:layout_toLeftOf="@+id/rowLayoutValue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowText1"
                style="@android:style/TextAppearance.Large"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Name" />


            <TextView
                android:id="@+id/rowText2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Description very long text"
                style="@android:style/TextAppearance.Small" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/rowLayoutValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/rowTextValue"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:text="200" />

            <TextView
                android:id="@+id/rowTextValue2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginEnd="8dp"
                android:layout_gravity="right"
                android:singleLine="true"
                android:text=""
                style="@android:style/TextAppearance.Small" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>